# ============================================
# Hortti Inventory - Backend Environment Variables
# ============================================
# Copie este arquivo para .env e preencha os valores
# IMPORTANTE: Nunca commite o arquivo .env no Git!
# ============================================

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3001
APP_NAME=Hortti Inventory API
APP_VERSION=1.0.0

# ============================================
# DATABASE - PostgreSQL
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=hortti_inventory

# TypeORM Configuration
DB_SYNCHRONIZE=false
DB_LOGGING=true
DB_AUTO_LOAD_ENTITIES=true

# ============================================
# JWT - Autenticação
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# ============================================
# UPLOADS - Multer
# ============================================
UPLOAD_DEST=./uploads
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/jpg

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# API CONFIGURATION
# ============================================
API_PREFIX=api
API_VERSION=v1
API_RATE_LIMIT=100

# ============================================
# BCRYPT
# ============================================
BCRYPT_ROUNDS=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ============================================
# DOCKER (quando usar docker-compose)
# ============================================
# Descomentar quando rodar com Docker
# DB_HOST=postgres
# DB_PORT=5432
