---
# ============================================
# Ansible Secrets (Production)
# ============================================
# COPIE ESTE ARQUIVO PARA secrets.yml
# E USE ansible-vault encrypt secrets.yml
# ============================================

# GitHub
github_repo_owner: "seu-usuario-github"
github_token: "ghp_seu_token_aqui"

# Domains
frontend_domain: "cantinhoverde.app.br"
backend_domain: "api.cantinhoverde.app.br"
traefik_domain: "traefik.cantinhoverde.app.br"

# PostgreSQL
postgres_user: "hortti_admin"
postgres_password: "CHANGE_THIS_SECURE_PASSWORD"
postgres_db: "hortti_inventory"

# JWT Secrets (gere com: openssl rand -base64 32)
jwt_secret: "CHANGE_THIS_VERY_LONG_RANDOM_STRING_32_CHARS_MINIMUM"
jwt_refresh_secret: "CHANGE_THIS_ANOTHER_VERY_LONG_RANDOM_STRING_32_CHARS"

# Cloudflare
cloudflare_dns_token: "seu_cloudflare_dns_api_token"
cloudflare_zone_token: "seu_cloudflare_zone_api_token"

# ACME Email
acme_email: "seu-email@exemplo.com"

# Traefik Dashboard Auth (gere com: htpasswd -nb admin senha_forte)
traefik_dashboard_auth: "admin:$apr1$xyz..."
