# ============================================
# Hortti Inventory - Docker Compose Environment
# ============================================
# COPIE ESTE ARQUIVO PARA .env E PREENCHA COM VALORES REAIS
# NUNCA COMMITE O ARQUIVO .env NO GIT!
# ============================================

# ============================================
# POSTGRESQL
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-secure-password-in-production
POSTGRES_DB=hortti_inventory
POSTGRES_PORT=5432

# ============================================
# BACKEND
# ============================================
BACKEND_PORT=3001
NODE_ENV=development

# Database Connection
DB_HOST=db
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=change-this-secure-password-in-production
DB_DATABASE=hortti_inventory
DB_SYNCHRONIZE=false
DB_LOGGING=true

# JWT Configuration
JWT_SECRET=change-this-to-a-very-long-random-string-minimum-32-characters
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=change-this-to-another-very-long-random-string-minimum-32-characters
JWT_REFRESH_EXPIRATION=7d

# Bcrypt
BCRYPT_ROUNDS=10

# Default User Credentials (for init.sql)
# These will be auto-generated by generate-env.sh
# Admin: admin@cantinhoverde.com / Admin@123
# User: user@cantinhoverde.com / User@123
ADMIN_PASSWORD_HASH=bcrypt-hash-will-be-generated-by-script
USER_PASSWORD_HASH=bcrypt-hash-will-be-generated-by-script

# CORS
CORS_ORIGIN=http://localhost:3000

# Uploads
UPLOAD_DEST=./uploads
UPLOAD_MAX_FILE_SIZE=5242880

# ============================================
# FRONTEND
# ============================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api
